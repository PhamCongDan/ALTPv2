<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/goinguoithan_bgr"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_calls"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:padding="48dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/ln_answer"

            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_answer"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo tôi đáp án đúng là A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffbe1c"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_call_01"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPerson1"
                android:layout_width="72dp"

                android:layout_height="72dp"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên ai đó"
                android:textSize="15dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_call_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:id="@+id/btnPerson2"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên ai đó"
                android:textSize="15dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_call_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPerson3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên ai đó"
                android:textSize="15dp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln_call_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnPerson4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:srcCompat="@android:drawable/sym_def_app_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tên ai đó"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:id="@+id/textView3" />
        </LinearLayout>






    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/btn_close"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:text="Đóng"
            android:textSize="15dp"
            android:textColor="@color/colorViolet"
            android:textAllCaps="false"
            android:background="@color/colorYellow"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ln_call_04" />
    </LinearLayout>


    <TextView
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:text="AAAAAAAAAAAAA"
        android:visibility="invisible"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="@color/colorYellow"
        android:layout_marginTop="-322dp"
        android:id="@+id/txtGoiY" />


</LinearLayout>